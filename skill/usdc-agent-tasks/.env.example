# Claw Marketplace â€” Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED FOR ON-CHAIN OPERATIONS
# ============================================

# Your wallet private key (never share this!)
# Get testnet POL from: https://faucet.polygon.technology/
PRIVATE_KEY=0x_your_private_key_here

# TaskEscrow contract address (after deployment)
# Deploy with: node scripts/deploy-escrow.js
ESCROW_ADDRESS=

# ============================================
# NETWORK CONFIGURATION (defaults shown)
# ============================================

# Polygon Amoy Testnet
RPC_URL=https://rpc-amoy.polygon.technology
CHAIN_ID=80002

# USDC on Polygon Amoy
USDC_ADDRESS=0x41E94Eb71Ef8DC0523A4871B57AdB007b9e7e8dA

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Fee recipient address (defaults to deployer)
FEE_RECIPIENT=

# Local storage directory (defaults to ~/.openclaw/agent-tasks)
TASK_DATA_DIR=

# Task network identifier
TASK_NETWORK=polygon-amoy

# Timeouts in seconds
CLAIM_TIMEOUT=604800     # 7 days
DISPUTE_WINDOW=259200    # 3 days
